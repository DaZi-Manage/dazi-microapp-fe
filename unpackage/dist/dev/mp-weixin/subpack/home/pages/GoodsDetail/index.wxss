.navbar-content {
  padding-left: 18rpx;
  padding-right: 18rpx;
  box-sizing: border-box;
}
.navbar-content.fixed {
  top: 0;
  left: 0;
  z-index: 2001;
}
.navbar-content.bg {
  background: #ffffff;
}
.navbar-content .nav-bg {
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  border: none;
  margin: 0;
  padding: 0;
}
.navbar-content .nav-bg::after {
  display: none;
}
.banner {
  width: 100vw;
  height: 480rpx;
}
.detail {
  box-sizing: border-box;
  padding: 16rpx 24rpx;
}
.detail .desc-box-hide {
  height: 36rpx;
  overflow: hidden;
}
.detail .desc-hide {
  width: calc(100% - 92rpx);
  height: 36rpx;
}
.detail .desc-show {
  height: auto;
  white-space: pre-wrap;
  word-break: break-all;
}
.detail .desc-more {
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 999;
  padding-left: 8rpx;
}
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  height: 120rpx;
  box-shadow: 0 0 20rpx #d0cfcf;
  border-top: 2rpx solid #d0cfcf;
  background: #FFFFFF;
  padding-bottom: env(safe-area-inset-bottom);
}
.footer .btn {
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 64rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  margin: auto 20rpx;
}

